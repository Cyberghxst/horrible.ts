{
    "compilerOptions": {
        "incremental": true,
        "declaration": true,
        "module": "CommonJS",
        "target": "ES2023",
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "declarationDir": "./types",
        "skipDefaultLibCheck": true,
        "strict": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "tsBuildInfoFile": "./__dump__/.tsbuildinfo",
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./node_modules",
        "./dist",
        "./__test__"
    ]
}